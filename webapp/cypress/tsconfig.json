{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["cypress", "@testing-library/cypress"],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["../src/*"],  // React app imports
      "@cypress/*": ["./*"]    // Cypress-specific imports
    },
    "skipLibCheck": false, // check d.ts files for Cypress
  },
  "include": [
    "**/*.ts",
    "../src/**/*.ts",
    "../src/**/*.tsx"
    ]
}
